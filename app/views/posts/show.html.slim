.row
	.col-lg-2.col-md-12.col-sm-12
		#left_bar
			= render "layouts/search_form" 
			= render "tags/list"
			= render "posts/info" 
	.col-lg-10.col-md-12.col-sm-12
		.row
			#post-image
				= link_to("Image was scaled. Link to full image (пока нет)", "", remote: true) if @post.samp
				br
				= image_tag link_to_image(@post), class: "img-fluid"
		.my-3.p-3.bg-white.rounded.box-shadow
			h4 Comments
			= render @post.comments
		= render 'comments/new_comment'