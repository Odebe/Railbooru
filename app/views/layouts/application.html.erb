<!DOCTYPE html>
<html>
  <head>
    <title>Railbooru</title>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag "logo.ico" %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://v4-alpha.getbootstrap.com/dist/css/bootstrap.css" rel="stylesheet">

  </head>


<body>

   <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse mb-4">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to "Railbooru", root_url, class: "navbar-brand"%>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to "Посты", posts_url, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Теги", tags_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <a class="nav-link disabled" href="#">Disabled</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container-fluid">
      <%= yield %>
    </div><!-- /.container -->


	</body>
</html>

